<div>
    <h1 class="card z-depth-3 center-align" id="shadow">Read the Latest from 'The Verge'</h1>
    <div class="row">
        <div class="col s3"></div>
        <h5 class="card z-depth-3 center-align col s6" id="shadow">Click 'Scrape Articles' to get the latest articles</h5>
    </div>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8 left-align" >
        {{#each article}}
        <div class="card-panel"  id="shadow">
            <h4>{{this.title}}</h4>
            <a href="/readArticle/{{this._id}}" class="waves-effect waves-light btn" id="btnSignUp">Read Article</a>
            <a href="/savedArticle/{{this._id}}" class="waves-effect waves-light btn" id="btnSignUp">Save Article</a>
        </div>

        {{/each}}
    </div>
</div>