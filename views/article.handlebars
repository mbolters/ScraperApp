<div class="row">
    <h3 class="card" id="shadow">{{article.title}}</h3>
    <h5 class="card-panel articleBody"  id="shadow">{{body}}</h5>
</div>

<div class="row">
    <div class="col s2"></div>
    <form  id="shadow" action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Comment on this Article</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
            </div>

            <div class="input-field">
                <i class="material-icons prefix">comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">
            </div>

        </div>
        <div class="row">
            <div class="input-field">
                <center><button class="btn add-comment-button topnav waves-effect waves-light" id="btnSignUp" type="submit" value="Submit">Submit<i class="material-icons right">send</i></button></center>
            </div>
        </div>
    </form>
</div>
<div class= "container" id="shadow">
    <div class="card col"> 
        <div class= "row">
            <div class="col s2"></div>
            <div class="col s8">
                <h5>Comments:</h5>
                {{#if article.comment}}
                {{#each article.comment}}
                <div class="card">
                    <p id="nameComment">{{name}}</p>
                    <p>{{body}}<p>
                </div>
                {{/each}}
                {{else}}
                <p>No Comments Yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>